<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <bean id="consoleEventLogger" class="com.gusev.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.gusev.spring.core.loggers.FileEventLogger" init-method="init">
        <constructor-arg type="java.lang.String" value="D:\ForJava\FirstSpringProject\out.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.gusev.spring.core.loggers.CacheFileEventLogger" parent="fileEventLogger"
          destroy-method="destroy">
        <constructor-arg index="1" value="3"/>
    </bean>

    <bean id="combinedEventLogger" class="com.gusev.spring.core.loggers.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>